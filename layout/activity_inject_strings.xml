<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InjectStringsActivity">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/cv4"
        android:paddingLeft="6.5dp"
        android:paddingRight="6.5dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#990100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/backInject"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3.5dp"

                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/back_chapters"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/backInject"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Startup Articles"
                android:textSize="16dp"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/NA_inject"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvb1header"
                >
                <FrameLayout
                    android:id="@+id/fl_adplaceholderInject"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/NA_inject"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="22dp"
                android:id="@+id/tvb1header"
                android:textColor="#3f3f3f"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="The Four Cringe - Worthy Mistakes Too Many Startups Make With Data"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tvb1header"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="18dp"
                android:id="@+id/byID"
                android:text="By  "
                android:textColor="#000000"
                android:textStyle="italic"
                android:textSize="11.4dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@id/tvb1header"
                app:layout_constraintStart_toEndOf="@id/byID"
                android:textColor="#18B4FE"
                android:text="Amanda Richardson"
                android:textSize="11.4dp"
                android:id="@+id/tvn1"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvstp2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/byID"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:textColor="#3f3f3f"
                android:text="njsdnfbkjb"
                android:textSize="12dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvstp2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/justCL1"
                android:layout_marginTop="39dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="3.1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:id="@+id/justLL1"
                    android:background="#18B4FF"
                    android:layout_height="230dp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/justLL1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tvbis3"
                    android:layout_marginLeft="24dp"
                    app:layout_constraintEnd_toEndOf="parent"


                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivP"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/roundfromsquaredrawable"
                    app:layout_constraintStart_toEndOf="@id/justLL1"
                    app:layout_constraintTop_toBottomOf="@id/tvbis3"
                    android:layout_marginTop="25dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/tvn2"
                    app:layout_constraintStart_toEndOf="@id/ivP"
                    app:layout_constraintTop_toTopOf="@id/ivP"
                    app:layout_constraintBottom_toBottomOf="@id/ivP"
                    android:layout_marginLeft="15dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="Read Full Article Now"
                android:id="@+id/btn"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:backgroundTint="#AC0000"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/justCL1"
                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iCPB"
                app:layout_constraintTop_toBottomOf="@id/btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:indeterminate="true"
                android:indeterminateTint="#000000"
                android:indeterminateTintMode="src_in"
                app:layout_constraintBottom_toTopOf="@id/wvwebcommon_id"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait.."
                android:textSize="8dp"
                android:id="@+id/txtOnline"
                app:layout_constraintStart_toEndOf="@id/iCPB"
                app:layout_constraintBottom_toTopOf="@id/wvwebcommon_id"/>

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/wvwebcommon_id"
                app:layout_constraintTop_toBottomOf="@id/btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>